%h2 The List

%table
  %thead
    %tr
      %th Title
      %th Director
      %th Rating
      %th Runtime
      %th J
      %th E
      %th R
      %th K
      %th S
  %tbody
    - @movies.each do |movie|
      %tr
        %td
          %a{ href: "/movie/#{movie.tmdb_id}"} #{movie.title} (#{movie.release_date.year})
        %td #{movie.director_name}
        %td #{movie.certification}
        %td #{movie.runtime}
        %td
          %span{ class: movie.j_seen_bool == '1' ? 'circle-indicator success' : 'circle-indicator' }
        %td
          %span{ class: movie.e_seen_bool == '1' ? 'circle-indicator success' : 'circle-indicator' }
        %td
          %span{ class: movie.r_seen_bool == '1' ? 'circle-indicator success' : 'circle-indicator' }
        %td
          %span{ class: movie.k_seen_bool == '1' ? 'circle-indicator success' : 'circle-indicator' }
        %td
          %span{ class: movie.s_seen_bool == '1' ? 'circle-indicator success' : 'circle-indicator' }
